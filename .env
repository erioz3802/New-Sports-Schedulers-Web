# Sports Scheduler - Environment Configuration
# Created: September 20, 2025
# Purpose: Environment variables for development and production

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
FLASK_ENV=development
DEBUG=True
SECRET_KEY=sports_scheduler_secret_key_2025_dev

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
# Development - SQLite
DATABASE_URL=sqlite:///sports_scheduler.db

# Production - PostgreSQL (uncomment and configure for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/sports_scheduler_prod

# =============================================================================
# EMAIL CONFIGURATION - SPORTS SCHEDULERS PRIVATE EMAIL
# =============================================================================
# SMTP Server Settings - PrivateEmail Configuration
SMTP_SERVER=mail.privateemail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USE_SSL=False

# IMAP/POP Server Settings (for future features)
IMAP_SERVER=mail.privateemail.com
IMAP_PORT=993
POP_SERVER=mail.privateemail.com
POP_PORT=995

# Email Credentials - Sports Schedulers Account
SMTP_USERNAME=admin@sportsschedulers.com
SMTP_PASSWORD=Josu2398-1

# Email Settings
MAIL_DEFAULT_SENDER=Sports Scheduler <admin@sportsschedulers.com>
MAIL_REPLY_TO=admin@sportsschedulers.com
MAIL_MAX_EMAILS=50

# =============================================================================
# SMS CONFIGURATION (OPTIONAL)
# =============================================================================
# Twilio Configuration (uncomment to enable SMS)
# SMS_SERVICE_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Alternative SMS Provider (uncomment to use)
# SMS_SERVICE_PROVIDER=textbelt
# TEXTBELT_API_KEY=your_textbelt_api_key

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Reminder Configuration
ENABLE_EMAIL_REMINDERS=True
ENABLE_SMS_REMINDERS=False
REMINDER_72H_ENABLED=True
REMINDER_24H_ENABLED=True

# Notification Rate Limiting
MAX_EMAILS_PER_HOUR=100
MAX_SMS_PER_HOUR=50

# =============================================================================
# SCHEDULING CONFIGURATION
# =============================================================================
# Scheduler Settings
SCHEDULER_ENABLED=True
SCHEDULER_INTERVAL_MINUTES=60
SCHEDULER_MAX_RETRIES=3

# Timezone Configuration
DEFAULT_TIMEZONE=America/Chicago
DATE_FORMAT=%Y-%m-%d
TIME_FORMAT=%H:%M

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Session Configuration
SESSION_TIMEOUT_HOURS=8
REMEMBER_COOKIE_DURATION_DAYS=30

# Security Headers
SECURITY_HEADERS_ENABLED=True
FORCE_HTTPS=False

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/sports_scheduler.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development Tools
FLASK_DEBUG=True
TESTING=False
WTF_CSRF_ENABLED=True

# Development Email Testing (set to True to log emails instead of sending)
EMAIL_TESTING_MODE=False
EMAIL_LOG_FILE=logs/email_test.log

# =============================================================================
# PRODUCTION SETTINGS (UNCOMMENT FOR PRODUCTION DEPLOYMENT)
# =============================================================================
# FLASK_ENV=production
# DEBUG=False
# TESTING=False
# FORCE_HTTPS=True
# EMAIL_TESTING_MODE=False

# Production Database
# DATABASE_URL=postgresql://prod_user:prod_password@prod_server:5432/sports_scheduler

# Production Email
# SMTP_SERVER=smtp.production-email-service.com
# SMTP_USERNAME=production_email@yourdomain.com
# SMTP_PASSWORD=production_email_password

# Production Security
# SECRET_KEY=your_production_secret_key_here
# WTF_CSRF_SECRET_KEY=your_csrf_secret_key_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/Disable Features
FEATURE_AUTO_ASSIGNMENT=True
FEATURE_CONFLICT_DETECTION=True
FEATURE_GAME_REMINDERS=True
FEATURE_SMS_NOTIFICATIONS=False
FEATURE_ANALYTICS=True
FEATURE_EXPORT_REPORTS=True

# Advanced Features
FEATURE_BULK_OPERATIONS=True
FEATURE_CALENDAR_SYNC=False
FEATURE_MOBILE_APP=False

# =============================================================================
# API CONFIGURATION (FOR FUTURE FEATURES)
# =============================================================================
# Google Maps API (for location features)
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Weather API (for game conditions)
# WEATHER_API_KEY=your_weather_api_key
# WEATHER_API_PROVIDER=openweathermap

# Calendar Integration
# GOOGLE_CALENDAR_CLIENT_ID=your_google_calendar_client_id
# GOOGLE_CALENDAR_CLIENT_SECRET=your_google_calendar_secret

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================
# Backup Configuration
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# Maintenance Mode
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE=The system is currently under maintenance. Please try again later.

# =============================================================================
# INSTRUCTIONS FOR SETUP
# =============================================================================
# 
# 1. COPY THIS FILE:
#    Copy this file to your project root as '.env'
#    
# 2. EMAIL SETUP:
#    - Replace 'your_email@gmail.com' with your actual Gmail address
#    - Replace 'your_app_password' with your Gmail App Password
#    - To get Gmail App Password:
#      a. Enable 2-factor authentication on your Google account
#      b. Go to Google Account settings > Security > App passwords
#      c. Generate an app password for "Mail"
#      d. Use this password in SMTP_PASSWORD
#
# 3. PRODUCTION SETUP:
#    - Uncomment and configure production settings
#    - Change all passwords and keys
#    - Set up proper SMTP server
#    - Configure PostgreSQL database
#    - Enable HTTPS
#
# 4. SMS SETUP (OPTIONAL):
#    - Sign up for Twilio account
#    - Get Account SID and Auth Token
#    - Uncomment and configure SMS settings
#
# 5. SECURITY:
#    - Generate strong SECRET_KEY for production
#    - Never commit this file with real credentials to version control
#    - Use different credentials for development and production
#
# =============================================================================